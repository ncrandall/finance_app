<%= form_for(@account) do |f| %>
  <%= render 'shared/error_messages', :object => @account %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 8%>
  </div>
  <div class="actions">
    <%= f.submit "Create Account", :class => "btn btn-large btn-primary pull-right" %>
  </div>
<% end %>
